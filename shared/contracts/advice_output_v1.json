{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Mediator Advice Output",
  "description": "Структура ответа AI медиатора с персонализированными рекомендациями",
  "type": "object",
  "required": [
    "pair_id",
    "advice_id", 
    "conflict_level",
    "participants",
    "analysis",
    "created_at"
  ],
  "properties": {
    "pair_id": {
      "type": "string",
      "description": "Идентификатор пары"
    },
    "advice_id": {
      "type": "string", 
      "description": "Уникальный идентификатор совета"
    },
    "conflict_level": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4,
      "description": "Уровень конфликта (1-легкий, 2-средний, 3-серьезный, 4-критический)"
    },
    "analysis": {
      "type": "object",
      "required": ["conflict_theme", "emotional_state", "communication_pattern"],
      "properties": {
        "conflict_theme": {
          "type": "string",
          "enum": [
            "communication", 
            "boundaries", 
            "jealousy", 
            "time_management", 
            "finances", 
            "family_friends",
            "intimacy",
            "life_goals",
            "household",
            "other"
          ]
        },
        "emotional_state": {
          "type": "object",
          "properties": {
            "tension_level": {
              "type": "string",
              "enum": ["low", "medium", "high", "critical"]
            },
            "dominant_emotions": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["anger", "sadness", "frustration", "fear", "disappointment", "hurt", "confusion"]
              }
            }
          }
        },
        "communication_pattern": {
          "type": "string",
          "enum": ["healthy_discussion", "escalating_conflict", "silent_treatment", "passive_aggressive", "one_sided"]
        }
      }
    },
    "participants": {
      "type": "object",
      "patternProperties": {
        "^user_[a-zA-Z0-9]+$": {
          "type": "object",
          "required": ["empathy", "insight", "recommendations", "long_term_perspective"],
          "properties": {
            "empathy": {
              "type": "string",
              "description": "Эмпатическое понимание позиции пользователя",
              "minLength": 50,
              "maxLength": 300
            },
            "insight": {
              "type": "string", 
              "description": "Инсайт о мотивах и чувствах партнера",
              "minLength": 50,
              "maxLength": 300
            },
            "recommendations": {
              "type": "array",
              "description": "Список конкретных рекомендаций",
              "minItems": 3,
              "maxItems": 5,
              "items": {
                "type": "object",
                "required": ["action", "description"],
                "properties": {
                  "action": {
                    "type": "string",
                    "description": "Краткое описание действия"
                  },
                  "description": {
                    "type": "string",
                    "description": "Подробное объяснение как выполнить"
                  },
                  "example_phrase": {
                    "type": "string",
                    "description": "Пример фразы для использования"
                  }
                }
              }
            },
            "long_term_perspective": {
              "type": "string",
              "description": "Как эти действия помогут отношениям в долгосрочной перспективе",
              "minLength": 30,
              "maxLength": 200
            },
            "communication_style": {
              "type": "string",
              "enum": ["direct", "emotional", "analytical", "friendly"],
              "description": "Определенный стиль общения пользователя"
            }
          }
        }
      },
      "minProperties": 2,
      "maxProperties": 2
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "warning_flags": {
      "type": "array",
      "description": "Предупреждения о серьезных проблемах",
      "items": {
        "type": "string",
        "enum": [
          "professional_help_recommended",
          "violence_mentioned", 
          "suicide_risk",
          "substance_abuse",
          "mental_health_concern"
        ]
      }
    }
  }
}
