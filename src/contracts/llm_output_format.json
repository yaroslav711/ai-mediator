{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["messages"],
  "properties": {
    "messages": {
      "type": "array",
      "minItems": 1,
      "maxItems": 2,
      "items": {
        "type": "object",
        "required": ["recipient", "variant", "text"],
        "properties": {
          "recipient": {
            "type": "string",
            "enum": ["user_1", "user_2"]
          },
          "variant": {
            "type": "string", 
            "enum": ["ack", "clarify", "final"]
          },
          "text": {
            "type": "string",
            "pattern": "^@user_[12]\\s.*",
            "maxLength": 12000
          }
        }
      }
    }
  }
}
