# Docker Compose environment  
# Скопируйте в .env для запуска через docker-compose up

# Database (используем сервисы из docker-compose.yml)
DATABASE_URL=postgresql://user:password@postgres:5432/ai_mediator
DATABASE_TEST_URL=postgresql://user:password@postgres:5432/ai_mediator_test

# OpenAI - ОБЯЗАТЕЛЬНО заполнить свой ключ!
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Telegram Bot - получить у @BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_SECRET_KEY=change-this-in-production-to-something-very-secure

# Bot Settings
BOT_HOST=0.0.0.0
BOT_PORT=8001
BOT_DEBUG=false

# Redis (используем сервис из docker-compose.yml)
REDIS_URL=redis://redis:6379/0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # Лучше для продакшна

# Environment
ENVIRONMENT=docker
